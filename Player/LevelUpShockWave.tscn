code = "shader_type canvas_item;

uniform float progress : hint_range(0.0, 1.0);
uniform float inner_smoothing;
uniform float outer_smoothing;
uniform float size = 1;
uniform vec4 color : hint_color;
uniform float alpha : hint_range(0.0, 1.0) = 1;
uniform float dist_force = 1;

void fragment() {
	
	float dist = distance(UV, vec2(0.5)) * 2.;
	float disto_strenght = smoothstep(progress - inner_smoothing, progress, dist + size);
	disto_strenght -=  smoothstep(progress - outer_smoothing, progress, dist);
	
	COLOR.a = disto_strenght * alpha;
//	COLOR.a *= COLOR.a;
	
	vec2 disp = normalize(UV - vec2(0.5)) * dist_force * disto_strenght;
	COLOR.rgb = texture(SCREEN_TEXTURE, SCREEN_UV + disp).rgb + color.rgb;
}
"

